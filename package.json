{
  "name": "typescript-node-boilerplate",
  "version": "1.0.0",
  "description": "A strict but unassuming Typescript + Node.JS boilerplate project",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist coverage",
    "watch": "tsc -w",
    "test": "jest",
    "dev": "npm run build; concurrently \"npm run watch\" \"npm run start:dev\"",
    "start": "node dist/index.js",
    "start:dev": "nodemon -d 1 dist/index.js",
    "verify": "npm run test && npm run lint && npm run clean && npm run build",
    "lint": "eslint \"src/**/*.{ts,json}\"",
    "lint:fix": "eslint \"src/**/*.{ts,json}\" --fix",
    "version": "npm run verify"
  },
  "keywords": [
    "typescript",
    "node",
    "boilerplate"
  ],
  "author": "Sander van Driel <anonymous@example.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.7",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.13.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.1",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "typescript": "^4.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run verify"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ],
    "**/*.json": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=10"
  }
}
